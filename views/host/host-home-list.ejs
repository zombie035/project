<%- include('../partials/head') %>
<style>
  .text-crimson { color: #990000; }
  .bg-crimson { background-color: #990000; }
  .bg-crimson-light { background-color: #fff5f5; }
  .border-crimson { border-color: #990000; }
  .hover-bg-crimson:hover { background-color: #7a0000; }
  .crimson-gradient { background: linear-gradient(135deg, #990000 0%, #cc0000 100%); }
</style>
</head>

<body class="bg-gray-50 min-h-screen">
  <%- include('../partials/nav') %>
  
  <main class="container mx-auto mt-10 mb-20 px-4 max-w-7xl">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-extrabold text-gray-900 mb-2">
        Hey <span class="text-crimson">Host!</span>
      </h2>
      <p class="text-gray-500 text-lg">Manage your registered properties and performance</p>
      <div class="h-1 w-24 bg-crimson mx-auto mt-4 rounded-full"></div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% registeredHomes.forEach(home => { %>
        <div class="group bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
          
          <div class="relative">
            <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-56 object-cover">
            <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm px-3 py-1 rounded-full shadow-sm flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 text-yellow-500 mr-1">
                <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
              </svg>
              <span class="text-sm font-bold text-gray-800"><%= home.rating %></span>
            </div>
          </div>

          <div class="p-6">
            <div class="mb-4">
              <h3 class="text-xl font-bold text-gray-800 group-hover:text-crimson transition-colors"><%= home.houseName %></h3>
              <p class="text-gray-500 text-sm flex items-center mt-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-crimson" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <%= home.location %>
              </p>
            </div>

            <div class="flex items-baseline mb-6">
              <span class="text-2xl font-black text-crimson">â‚¹<%= home.price %></span>
              <span class="text-gray-400 text-sm ml-1">/ night</span>
            </div>

            <div class="grid grid-cols-2 gap-3">
              <a href="/host/edit-home/<%= home.id %>?editing=true"
                 class="flex justify-center items-center px-4 py-2.5 rounded-xl font-semibold border-2 border-crimson text-crimson hover:bg-crimson hover:text-white transition-all duration-200">
                Edit
              </a>
              
              <form action="/host/delete-home/<%= home.id %>" method="POST">
                <button type="submit" 
                  class="w-full flex justify-center items-center px-4 py-2.5 rounded-xl font-semibold bg-gray-100 text-gray-600 hover:bg-red-600 hover:text-white transition-all duration-200"
                  onclick="return confirm('Are you sure you want to delete this listing?')">
                  Delete
                </button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>
