<%- include('../partials/head') %>
<style>
  .bg-crimson { background-color: #990000; }
  .text-crimson { color: #990000; }
  .border-crimson { border-color: #990000; }
  .focus-ring-crimson:focus { --tw-ring-color: #990000; }
  .hover-bg-crimson-dark:hover { background-color: #7a0000; }
</style>
</head>

<body class="bg-gray-50 min-h-screen font-sans">
  <%- include('../partials/nav') %>

  <main class="container mx-auto mt-12 px-4">
    <div class="max-w-xl mx-auto bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-100">
      
      <div class="bg-crimson py-8">
        <h1 class="text-3xl font-extrabold text-center text-white tracking-tight">
          <%= editing ? "Refine Your Listing" : "Host Your Home" %>
        </h1>
        <p class="text-red-100 text-center mt-2 opacity-90">
          <%= editing ? "Update your property details below" : "Join our community of hosts worldwide" %>
        </p>
      </div>

      <form action="/host/<%= editing ? 'edit-home' : 'add-home' %>" method="POST" class="p-8 space-y-5">
        <input type="hidden" name="id" value="<%= editing ? home.id : '' %>" />

        <div class="space-y-1">
          <label class="text-sm font-semibold text-gray-600 ml-1">Property Name</label>
          <input type="text" name="houseName" value="<%= editing ? home.houseName : '' %>" placeholder="e.g. Crimson Villa" 
            class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus-ring-crimson transition duration-200" required />
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div class="space-y-1">
            <label class="text-sm font-semibold text-gray-600 ml-1">Price per Night</label>
            <input type="text" name="price" value="<%= editing ? home.price : '' %>" placeholder="$250" 
              class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus-ring-crimson transition duration-200" required />
          </div>
          <div class="space-y-1">
            <label class="text-sm font-semibold text-gray-600 ml-1">Rating</label>
            <input type="text" name="rating" value="<%= editing ? home.rating : '' %>" placeholder="4.8" 
              class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus-ring-crimson transition duration-200" />
          </div>
        </div>

        <div class="space-y-1">
          <label class="text-sm font-semibold text-gray-600 ml-1">Location</label>
          <input type="text" name="location" value="<%= editing ? home.location : '' %>" placeholder="Paris, France" 
            class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus-ring-crimson transition duration-200" required />
        </div>

        <div class="space-y-1">
          <label class="text-sm font-semibold text-gray-600 ml-1">Photo URL</label>
          <input type="text" name="photoUrl" value="<%= editing ? home.photoUrl : '' %>" placeholder="https://images.unsplash.com/..." 
            class="w-full px-4 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus-ring-crimson transition duration-200" required />
        </div>

        <button type="submit" class="w-full bg-crimson text-white font-bold py-4 rounded-xl shadow-lg hover-bg-crimson-dark transform hover:-translate-y-0.5 transition duration-300 mt-4">
          <%= editing ? "Update Listing" : "List Your Home" %>
        </button>
        
        <p class="text-center text-xs text-gray-400 mt-4 uppercase tracking-widest">Powered by AirBnB Crimson</p>
      </form>
    </div>
  </main>
</body>
</html>
