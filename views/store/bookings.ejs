<body class="bg-gray-50 min-h-screen font-sans">
  <%- include('../partials/nav') %>

  <main class="container mx-auto mt-16 px-4 max-w-4xl">
    <div class="bg-white rounded-3xl shadow-2xl overflow-hidden border border-gray-100">
      
      <div class="h-2 bg-crimson"></div>

      <div class="p-12 md:p-20 text-center">
        <div class="inline-flex items-center justify-center w-24 h-24 bg-crimson-light rounded-full mb-8 animate-pulse">
