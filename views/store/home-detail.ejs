<%- include('../partials/head') %>
<style>
  .bg-crimson { background-color: #990000; }
  .text-crimson { color: #990000; }
  .border-crimson { border-color: #990000; }
  .bg-crimson-soft { background-color: #fff5f5; }
  .glass-card {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(153, 0, 0, 0.1);
  }
</style>
</head>

<body class="bg-gray-50 min-h-screen pb-20">
  <%- include('../partials/nav') %>

  <main class="container mx-auto mt-8 px-4 max-w-6xl">
    <div class="mb-6">
      <a href="/homes" class="inline-flex items-center text-gray-500 hover:text-crimson transition font-medium">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
        Back to listings
      </a>
    </div>

    <div class="bg-white shadow-2xl rounded-[2rem] overflow-hidden border border-gray-100 flex flex-col md:flex-row">
      
      <div class="w-full md:w-3/5 relative">
        <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-80 md:h-full object-cover">
        <div class="absolute top-6 left-6 bg-white/90 backdrop-blur-md px-4 py-2 rounded-full shadow-lg flex items-center">
          <span class="flex h-2 w-2 rounded-full bg-crimson mr-2"></span>
          <span class="text-sm font-bold text-gray-800 uppercase tracking-widest">Rare Find</span>
        </div>
      </div>

      <div class="w-full md:w-2/5 p-8 md:p-12 flex flex-col justify-between">
        <div>
          <div class="flex justify-between items-start mb-4">
            <h1 class="text-4xl font-black text-gray-900 leading-tight">
              <%= home.houseName %>
            </h1>
            <div class="transform scale-125 origin-top-right">
              <%- include('../partials/favourite') %>
            </div>
          </div>

          <div class="flex items-center space-x-4 mb-8">
            <div class="flex items-center bg-crimson-soft px-3 py-1 rounded-lg">
              <svg class="w-4 h-4 text-yellow-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
              <span class="font-bold text-crimson"><%= home.rating %></span>
            </div>
            <span class="text-gray-400">|</span>
            <p class="text-gray-600 font-medium flex items-center">
              <svg class="w-4 h-4 mr-1 text-crimson" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
              <%= home.location %>
            </p>
          </div>

          <div class="space-y-6">
            <div>
              <h3 class="text-sm uppercase tracking-widest text-gray-400 font-bold mb-2">Description</h3>
              <p class="text-gray-600 leading-relaxed italic">
                "<%= home.description || 'Experience a unique stay in this beautifully curated home, designed for comfort and elegance.' %>"
              </p>
            </div>

            <div class="grid grid-cols-2 gap-4 py-6 border-y border-gray-100">
              <div class="flex items-center text-gray-500">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M5 13l4 4L19 7"></path></svg>
                <span class="text-sm">Self Check-in</span>
              </div>
              <div class="flex items-center text-gray-500">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M5 13l4 4L19 7"></path></svg>
                <span class="text-sm">Free WiFi</span>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-8 glass-card p-6 rounded-2xl shadow-inner">
          <div class="flex justify-between items-center mb-4">
            <div>
              <span class="text-3xl font-black text-crimson">â‚¹<%= home.price %></span>
              <span class="text-gray-500 font-medium">/ night</span>
            </div>
          </div>
          <button class="w-full bg-crimson text-white py-4 rounded-xl font-bold shadow-lg hover:bg-[#7a0000] transform active:scale-95 transition-all duration-200">
            Reserve Now
          </button>
          <p class="text-center text-xs text-gray-400 mt-3">You won't be charged yet</p>
        </div>
      </div>
    </div>
  </main>
</body>
</html>
