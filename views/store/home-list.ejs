<%- include('../partials/head') %>
<style>
  .bg-crimson { background-color: #990000; }
  .text-crimson { color: #990000; }
  .crimson-gradient { background: linear-gradient(135deg, #990000 0%, #cc0000 100%); }
  .hover-crimson-gradient:hover { background: linear-gradient(135deg, #7a0000 0%, #990000 100%); }
</style>
</head>

<body class="bg-gray-50 min-h-screen">
  <%- include('../partials/nav') %>

  <main class="container mx-auto mt-10 mb-20 px-4 max-w-7xl">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-black text-gray-900">
        Explore <span class="text-crimson">Our Homes</span>
      </h2>
      <div class="h-1 w-20 bg-crimson mx-auto mt-4 rounded-full"></div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
      <% registeredHomes.forEach(home => { %>
        <div class="group bg-white rounded-[2rem] shadow-sm border border-gray-100 overflow-hidden hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-1">
          
          <div class="relative overflow-hidden">
            <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" 
                 class="w-full h-56 object-cover transition-transform duration-700 group-hover:scale-110">
            
            <div class="absolute top-4 right-4 z-10">
              <div class="bg-white/80 backdrop-blur-md p-2 rounded-full shadow-md hover:bg-white transition-colors">
                <%- include('../partials/favourite', {home: home}) %>
              </div>
            </div>

            <div class="absolute bottom-4 left-4">
              <span class="bg-black/60 backdrop-blur-md text-white px-3 py-1 rounded-lg text-sm font-bold">
                â‚¹<%= home.price %> / night
              </span>
            </div>
          </div>

          <div class="p-6">
            <div class="flex justify-between items-start mb-2">
              <h3 class="text-lg font-bold text-gray-800 truncate group-hover:text-crimson transition-colors">
                <%= home.houseName %>
              </h3>
              <div class="flex items-center text-sm font-bold">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-yellow-500 mr-1" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <%= home.rating %>
              </div>
            </div>

            <p class="text-gray-500 text-sm mb-6 flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-crimson" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              </svg>
              <%= home.location %>
            </p>

            <a href="/homes/<%= home.id %>"
               class="block w-full text-center crimson-gradient text-white font-bold py-3 rounded-xl shadow-lg hover-crimson-gradient transform active:scale-95 transition-all duration-300">
              View Details
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>
