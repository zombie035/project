
<div class="md:hidden relative">
  
  <button 
    id="menu-toggle" 
    class="relative group p-3 rounded-xl transition-all duration-300 
           bg-white/10 border border-white/20 
           hover:bg-white/20 hover:border-white/40 hover:shadow-[0_0_15px_rgba(255,255,255,0.3)]
           active:scale-90 focus:outline-none focus:ring-2 focus:ring-white/50"
  >
    <svg 
      id="menu-icon"
      class="w-7 h-7 text-white transition-transform duration-500 group-hover:rotate-90" 
      fill="none" 
      stroke="currentColor" 
      viewBox="0 0 24 24"
    >
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M4 6h16M4 12h16m-7 6h7"></path>
    </svg>
  </button>

  <div 
    id="mobile-menu" 
    class="hidden absolute right-0 mt-4 w-64 py-4 rounded-2xl shadow-2xl 
           bg-[#7a0000] border border-white/10 backdrop-blur-lg z-50 transform origin-top-right transition-all"
  >
    <div class="flex flex-col space-y-1 px-3">
      <a href="/" class="px-4 py-3 rounded-xl hover:bg-white/10 transition">Explore</a>
      <a href="/homes" class="px-4 py-3 rounded-xl hover:bg-white/10 transition">Homes-List</a>
      <a href="/favourites" class="px-4 py-3 rounded-xl hover:bg-white/10 transition">Favourites</a>
      <a href="/bookings" class="px-4 py-3 rounded-xl hover:bg-white/10 transition">Bookings</a>
      <div class="h-px bg-white/10 my-2 mx-4"></div>
      <a href="/host/host-home-list" class="px-4 py-3 rounded-xl hover:bg-white/10 transition">Host Homes</a>
      <a href="/host/add-home" class="mt-2 px-4 py-4 bg-white text-[#990000] text-center font-bold rounded-xl shadow-lg hover:bg-gray-100 transition">
        Add Home
      </a>
    </div>
  </div>
</div>

<script>
  const toggleBtn = document.getElementById('menu-toggle');
  const menuBox = document.getElementById('mobile-menu');

  toggleBtn.addEventListener('click', (e) => {
    menuBox.classList.toggle('hidden');
    // Prevents click from bubbling up if you add a 'close on click outside' listener later
    e.stopPropagation(); 
  });

  // Optional: Close menu when clicking anywhere else
  document.addEventListener('click', () => {
    menuBox.classList.add('hidden');
  });
</script>
